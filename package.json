{
  "name": "identitynow-mcp",
  "displayName": "IdentityNow MCP",
  "description": "A simple MCP extension for SailPoint IdentityNow that provides basic idenntity role, access profile and accounts lookup.",
  "publisher": "darkedges",
  "license": "MIT",
  "version": "0.0.2",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "sailpoint",
    "identitynow",
    "iam",
    "model-context-protocol"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "IdentityNow MCP",
      "type": "object",
      "properties": {
        "identityNowMCP.baseUrl": {
          "type": "string",
          "default": "https://sailpoint.api.identitynow.com",
          "description": "Base URL for the IdentityNow tenant"
        },
        "identityNowMCP.clientId": {
          "type": "string",
          "default": "",
          "description": "Client Id for the IdentityNow tenant"
        },
        "identityNowMCP.clientSecret": {
          "type": "string",
          "default": "",
          "description": "Client Secret for the IdentityNow tenant"
        }
      }
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "darkedges.identitynow-mcp",
        "label": "IdentityNow MCP"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/darkedges/identitynow-mcp-vscode-extension.git"
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.cjs",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run lint && npm run check-types && node esbuild.cjs --production",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}